#!/usr/bin/make -f
SHELL	= /bin/bash

tmp	= debian/tmp
bindir	= /usr/bin
libdir = <%= @tpl_options[:libdir] %>
 

build:
	dh_testdir

	mkdir -p "$(tmp)$(libdir)/deb/"
	<% @tpl_options[:files].each do |file| %>
	<% next if file =~ /^debian/ %>
	-cp -r <%= file %> "$(tmp)$(libdir)/deb/"
	<% end %>

install: build
	dh_testdir
	dh_testroot

	echo "$(tmp)$(libdir)/deb/" >debian/<%= @tpl_options[:spec].name %>.install

	dh_install

binary: binary-indep binary-arch

binary-indep: install
	dh_testdir -i
	dh_testroot -i

#	dh_installchangelogs -i CHANGELOG.rdoc
#	dh_installdocs -i
	dh_link -i
#	dh_compress -i -X.rb -X.html
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: install
	dh_testdir -a
	dh_testroot -a

#	dh_installchangelogs -a CHANGELOG.rdoc
#	dh_installdocs -a -A README.rdoc doc/faq
	dh_link -a
	dh_strip -a
#	dh_compress -a -X.rb -X.html
	dh_fixperms -a
	dh_makeshlibs -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

clean:
	dh_testdir
	dh_testroot
	-rm -f debian/*.install

	dh_clean

.PHONY: build binary binary-indep binary-arch clean

